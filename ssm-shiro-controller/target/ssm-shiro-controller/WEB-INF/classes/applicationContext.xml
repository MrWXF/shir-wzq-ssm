        <!--<settings>-->
            <!--&lt;!&ndash; 打印查询语句 &ndash;&gt;-->
            <!--<setting name="logImpl" value="STDOUT_LOGGING" />-->
        <!--</settings>-->
    <!--</configuration>-->
    <!--开启显示sql语句的配置 begin-->
</beans>